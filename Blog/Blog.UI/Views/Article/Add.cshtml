@model ArticleDM

<link href="~/adminlte/plugins/summernote/summernote-bs4.min.css" rel="stylesheet" />

<h3>Makale Ekle</h3>
<form action="/makale-ekle" method="post">
    <div class="form-group">
        <label>Başlık</label>
        <input type="text" name="Title" class="form-control" placeholder="Makale Başlığı"/>
    </div> 
    <div class="form-group">
        <label>Kategori</label>
        <select name="CategoryID" class="form-control">
            @if (ViewData["CategoryList"] != null)
            {
                foreach (var item in ViewData["CategoryList"] as List<Category>)
                {
                    <option value="@item.ID">@item.Name</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label>İçerik</label>
        <textarea id="summernote" name="Content" style="min-height:300px"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-sm btn-success">Kaydet</button>
    </div>
</form>

@section Scripts{
    <script src="~/adminlte/plugins/summernote/summernote-bs4.min.js"></script>
    <script>
        $(function () {
            // Summernote
            $('#summernote').summernote()
        })
    </script>
}
